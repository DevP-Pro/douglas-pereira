{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "typeRoots": ["./src/types", "./node_modules/@types"]
    },
    "include": ["src/**/*", "config/**/*"],  // Inclui todos os arquivos na pasta src e config
    "exclude": ["node_modules", "**/*.spec.ts"]
  }
  